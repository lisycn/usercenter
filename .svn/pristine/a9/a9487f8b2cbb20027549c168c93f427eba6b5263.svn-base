<project xmlns="http://maven.apache.org/POM/4.0.0" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jx.blackface.gaea</groupId>
  <artifactId>usercenter</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>usercenter</name>
  <distributionManagement>
	<repository>
		<id>releases</id>
		<name>Internal Releases</name>
		<url>http://123.57.10.193:8081/nexus/content/repositories/releases</url>
	</repository>
	<snapshotRepository>
		<id>Snapshots</id>
		<name>Internal Snapshots</name>
		<url>http://123.57.10.193:8081/nexus/content/repositories/snapshots</url>
	</snapshotRepository>
  </distributionManagement>
  <dependencies>
	<dependency>
		<groupId>com.jx.spat</groupId>
		<artifactId>argo</artifactId>
		<version>1.0.1</version>
	</dependency>
    <dependency>
		<groupId>commons-io</groupId>
		<artifactId>commons-io</artifactId>
		<version>2.4</version>
	</dependency>
	<!-- 阿里巴巴json解析包 start -->
	<dependency>
		<groupId>com.alibaba</groupId>
		<artifactId>fastjson</artifactId>
		<version>1.1.41</version>
	</dependency>
    <dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>javax.servlet-api</artifactId>
        <scope>provided</scope>
        <version>3.0.1</version>
    </dependency>
	<dependency>
		<groupId>com.jx.spat</groupId>
		<artifactId>com.jx.spat.gaea.server.contract</artifactId>
		<version>1.0.0</version>
	</dependency>
	<dependency>
		<groupId>com.jx.spat.gaea</groupId>
		<artifactId>com.jx.spat.gaea.client</artifactId>
		<version>1.0.1</version>
	</dependency>
	<dependency>
		<groupId>com.bj58.spat</groupId>
		<artifactId>com.bj58.spat.dao</artifactId>
		<version>1.0.3-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>commons-logging</groupId>
		<artifactId>commons-logging</artifactId>
		<version>1.1.1</version>
	</dependency>
  </dependencies>
  <build>
      <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>deploy</phase>
						<configuration>
							<archive>
								<addMavenDescriptor>false</addMavenDescriptor>
								<manifestEntries>
									<groupId>${project.groupId}</groupId>
									<artifactId>${project.artifactId}</artifactId>
									<version>${project.version}</version>
								</manifestEntries>
							</archive>
							<includes>
								<include>**/contract/**</include>
								<include>**/entity/**</include>
								<include>**/utils/**</include>
								<include>**/annotaion/**</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>server</id>
						<phase>package</phase>
						<configuration>
							<finalName>${project.groupId}.${project.artifactId}.core-${project.version}</finalName>
							<archive>
								<addMavenDescriptor>false</addMavenDescriptor>
								<manifestEntries>
									<groupId>${project.groupId}</groupId>
									<artifactId>${project.groupId}.service</artifactId>
									<version>${project.version}</version>
								</manifestEntries>
							</archive>
						</configuration>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>

			</plugin>


			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<attach>true</attach>
					<includes>
						<include>**/contract/**</include>
						<include>**/entity/**</include>
						<include>**/utils/**</include>
						<include>**/annotaion/**</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<excludePackageNames>*.components.*:*.common.*:*.comparator.*:*.config.*:*.dal.*:*.enumeration.*:*.index.*:*.utils.*</excludePackageNames>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<!-- 拷贝依赖的jar包到lib目录-->
            <plugin>  
                <groupId>org.apache.maven.plugins</groupId>  
                <artifactId>maven-dependency-plugin</artifactId>  
                <executions>  
                    <execution>  
                        <id>copy</id>  
                        <phase>package</phase>  
                        <goals>  
                            <goal>copy-dependencies</goal>  
                        </goals>  
                        <configuration>  
                            <outputDirectory>  
                                ${project.build.directory}/lib  
                            </outputDirectory>  
                        </configuration>  
                    </execution>  
                </executions>  
            </plugin>  
             
		</plugins>
  </build>
</project>